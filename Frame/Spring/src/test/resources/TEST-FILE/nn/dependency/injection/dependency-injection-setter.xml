<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="user" class="com.code.spring.nn.dependency.DependencyUser">
		<property name="id" value="1"/>
		<property name="name" value="愆凡"/>
	</bean>

	<!-- 通过 XML 编码进行 Setter 方法注入依赖 -->
	<bean id="userHodler" class="com.code.spring.nn.dependency.injection.DependencyUserHolder">
		<property name="user" ref="user"/>
	</bean>

	<!-- 通过 Autowire 进行 Setter 方法注入依赖 -->
	<bean id="userHodlerAutowirebyName" class="com.code.spring.nn.dependency.injection.DependencyUserHolder"
		  autowire="byName"/>
	<bean id="userHodlerAutowirebyType" class="com.code.spring.nn.dependency.injection.DependencyUserHolder"
		  autowire="byType"/>

</beans>
